@using Spellfire.Model
@using Spellfire.Common.Extensions
@model Card

@{
    var nameClass = Model.Name.Length > 38 ? "text-medium" : string.Empty;

    // TODO: Remove once database has this info
    var worldClass = Model.World.WorldKey == WorldKey.DarkSun && Model.HasDarkSunNewLogo()
                        ? Model.WorldKey.GetDisplayShortName() + "2"
                        : Model.WorldKey.GetDisplayShortName();
}

<div class="cardRuleHeader">
    <div class="cardWorld pull-left">
        <img src="~/Images/worlds/@Model.WorldPath" alt="" class="world @worldClass"/>
    </div>
    <div class="pull-right">Dungeon</div>
</div>
<div class="cardRuleTitle">
    <div class="cardRuleName pull-left @nameClass" title="@Model.Name">@Model.Name</div>
</div>
<div class="cardRulePower">@Model.Power <span class="blueline" title="Blueline">@Model.Blueline</span></div>
