@model Spellfire.Model.Card

@{
    var bluelineLength = Model.Blueline != null ? Model.Blueline.Length : 0;
    var completePowerLength = Model.Power.Length + bluelineLength;
    var powerClass = completePowerLength > 600 ? "text-small" : (completePowerLength > 440 ? "text-medium" : string.Empty);
}

<div class="cardRuleHeader">
    <div class="cardWorld pull-left">
        <img src="~/Images/worlds/@Model.World.ImagePath" alt="" class="world"/>
    </div>
    <div class="pull-right">Rule</div>
</div>
<div class="cardRuleTitle">
    <div class="cardRuleName pull-left">@Model.Name</div>
</div>
<div class="cardRulePower @powerClass">@Model.Power <span class="blueline" title="Blueline">@Model.Blueline</span></div>
